<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :summary %>
    <%= f.input :resource_type %>
    <%= f.input :file_url %>
    <%= f.input :approved %>
    <!-- <%= f.association :user %> -->
    <!-- <%= f.association :subject %> -->
    <%= f.hidden_field :subject_id, :value => params[:subject_id]%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
